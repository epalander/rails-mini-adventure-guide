<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.0),rgba(0,0,0,0.0)), url(https://images.pexels.com/photos/130111/pexels-photo-130111.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500);">
  <div class="container">
    <h1><%= @adventure.title %></h1>
  </div>
</div>

<div class="container">
  <div class="container-adventure">
    <div class="container-main">
      <div class="icon-cards">
          <p><i class="fas fa-award"></i>  <%= @adventure.category %></p>
          <p><i class="fas fa-mountain"></i>  <%= @difficulty %></p>
          <p><i class="fas fa-clock"></i>  <%= @adventure.avg_duration %> min</p>
          <p><i class="fas fa-hiking"></i>  <%= @adventure.distance %> km</p>
          <p><i class="fas fa-baby-carriage"></i>  <%= @stroller  %>
          <p><i class="fas fa-child"> </i>  From <%= @youngest_age %></p>
          <p><i class="fas fa-parking"></i>  <%= @parking %></p>
          <p><i class="fas fa-bus"></i>  <%= @public_transport %></p>
      </div>
    </div>

    <div class="wrapper d-flex justify-content-between">
      <div class="container mt-3">
        <div id="map"
          style="width: 100%; height: 500px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>

      <div class="container mt-3">
        <h2>Description:</h2>
        <p><%= @adventure.description %></p>
      </div>
    </div>

    <div class="container">
      <h2>Reviews</h2>
      <div class="container-main">
        <div class="cards">
          <% @adventure.reviews.each do |review|  %>
          <p><strong><%= review.tagline %></strong></p>
          <p><%= review.rating %></p>
          <p><%= review.content %></p>
          <%= link_to "Delete", review_path(review), method: :delete, class: "btn btn-primary mt-4", data: {confirm: "Are you sure you would like to delete the review?"}%>
          <% end %>
        </div>
      </div>
    </div>

    <div class="container">
      <%= link_to 'Create a review', new_adventure_review_path(@adventure), class: "btn btn-primary mt-4" %>
    </div>

  </div>
</div>
