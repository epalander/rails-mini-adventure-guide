<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.0),rgba(0,0,0,0.0)), url(https://images.unsplash.com/photo-1563543054715-4f60d55bccb8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjF9&auto=format&fit=crop&w=1350&q=80);">
  <div class="container">
    <h1>Mini Adventure Guide</h1>
      <p>Plan mini adventures.</p>

    <%= simple_form_for :search, url: search_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="query" id="search_query" placeholder="e.g. hiking, bike" />
        <button name="button" type="submit" class="btn btn-ghost">
          <i class="fas fa-search"></i>
        </button>
      </div>
    <% end %>

  </div>
</div>

<div class="container-fluid d-flex justify-content-between">

  <div class="container m-7">
    <div id="map"
      style="width: 100%; height: 500px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

  <div class="container m-7">

    <div class="col-12">
      <h2>Top 5 Mini Adventures</h2>
      <% @top_adventures.each do |adventure| %>
        <div class="card-product">
        <img src="https://images.unsplash.com/photo-1566834945200-3d65598f940c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80"/>
          <div class="card-product-infos">
            <div><%= link_to adventure.title, adventure_path(adventure) %></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
