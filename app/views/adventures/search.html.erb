<div class="text-center m-3">
  <h1>Search Results</h1>
</div>
<div class="d-flex justify-content-center">
  <div class="filter-buttons"><%= link_to "Parking Available", @params.merge(parking: true), class: "btn btn-ghost" %></div>
  <div class="filter-buttons"><%= link_to "Public Transport Accessible", @params.merge(public_transport: true), class: "btn btn-ghost" %></div>
  <div class="filter-buttons"><%= link_to "Stroller Friendly", @params.merge(stroller_friendly: true), class: "btn btn-ghost" %></div>
  <div class="filter-buttons"><%= render 'modal', adventure: @adventure %></div>
</div>

<div class="wrapper d-flex justify-content-between">

  <div class="container mt-3">
    <div id="map"
      style="width: 100%; height: 500px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

  <div class="container mt-3">
    <% @results.each do |adventure| %>
      <div class="card-product">
        <img src="https://images.unsplash.com/photo-1566834945200-3d65598f940c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80"/>
          <div class="card-product-infos">
            <div><%= link_to adventure.title, adventure_path(adventure) %></div>
            <p>Category: <%= adventure.category %></p>
            <p>Description: <%= adventure.description %></p>
          </div>
      </div>
    <% end %>
  </div>

</div>

<hr>
  <%= link_to "Back to Home", root_path, class:"btn btn-default btn-lg " %>
